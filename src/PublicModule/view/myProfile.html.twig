{% extends '@core/layout.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}

<section>
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h1>Modifier mes informations</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<form action="{{url.generateUrl('myProfile')}}" method="post">
					{% if user.hasFlash %}
						{% if user.hasFlashArray('profile_error')%}
							<div class="alert alert-danger">
								{{user.getFlash().profile_error}}
							</div>
						{% endif %}
						{% if user.hasFlashArray('profile_success')%}
							<div class="alert alert-success">
								{{user.getFlash().profile_success}}
							</div>
						{% endif %}
	    			{% endif %}
					{{form|raw}}
					<div class="row">
    					<div class="col-xs-12 text-center">
    						<br>
    						<button type="submit" class="btn btn-success btn-lg">Modifier mes informations</button>
    					</div>
	    			</div>
				</form>
			</div>
		</div>
	</div>
</section>

<hr class="star-primary">

<section>
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<h1>Modifier mon mot de passe</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<form action="{{url.generateUrl('myProfile')}}" method="post">
					{% if user.hasFlash %}
						{% if user.hasFlashArray('password_error')%}
							<div class="alert alert-danger">
								{{user.getFlash().password_error}}
							</div>
						{% endif %}
						{% if user.hasFlashArray('password_success')%}
							<div class="alert alert-success">
								{{user.getFlash().password_success}}
							</div>
						{% endif %}
	    			{% endif %}
					{{formPassword|raw}}
					<div class="row">
    					<div class="col-xs-12 text-center">
    						<br>
    						<button type="submit" class="btn btn-success btn-lg">Modifier mon mot de passe</button>
    					</div>
	    			</div>
				</form>
			</div>
		</div>
	</div>
</section>

{% endblock %}
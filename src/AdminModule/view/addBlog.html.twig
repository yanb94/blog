{% extends '@core/layout.html.twig' %}

{% block title %}
    Ajouter un article
{% endblock %}

{% block body %}
    <section>
    	<div class="container">
    		<div class="row my-title-admin-home">
    			<div class="col-xs-10">
    				<h2>Ajouter un article</h2> 
    			</div>
    		</div>
    	</div>
    	<div class="container">
    		<div class="row my-title-admin-home">
    			<div class="col-xs-12">
    				<form action="{{url.generateUrl('addBlog')}}" method="post">
    					{% if user.hasFlash() %}
							<div class="alert alert-danger">
								{{user.getFlash()}}
							</div>
						{% endif %}
    					{{form|raw}}
	    				<div class="row">
	    					<div class="col-xs-12 text-center">
	    						<br>
	    						<button type="submit" class="btn btn-success btn-lg">Ajouter un article</button>
	    					</div>
		    			</div>
    				</form>
    			</div>
    		</div>
    	</div>
    </section>
{% endblock %}